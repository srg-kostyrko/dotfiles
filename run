#!/bin/bash
source scripts/functions

export DOTFILES 
DOTFILES="$(pwd -P)"

set -e

echo ''


case $1 in
    "check")
        shellcheck ./run -x scripts/*;
        ;;
    "link")
        ./install;
        ;;
    *) 
        error "invalid mode"
        header "supported modes"
        info "link"
esac

echo ''